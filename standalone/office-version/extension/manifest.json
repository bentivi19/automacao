{
  "manifest_version": 3,
  "name": "NF Extractor Helper",
  "version": "1.0",
  "description": "Extensão para auxiliar na extração de NFs para Excel",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "file:///*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["file:///*"],
      "js": ["office.js", "content.js"]
    }
  ]
}
